  </head>

  <body>
    <h1>My book titles</h1>
    <!-- <form method="post" action="/item/add">
    <label for="name">Input</label>
    <input type="text" name="name">
    <input type="submit" value="Add">
  </form> -->
    <h4>Items:</h4>
    <table class="table">
      <thead>
        <tr>
          <th>Author</th>
          <th>Title</th>
          <th>Description</th>
          <th>Body</th>
          <th>Likes</th>
          <th>Tags</th>
        </tr>
      </thead>
      <tbody>
        <% articles.forEach(function(article) { %>
        <tr>
          <td><%= article.authorUID %></td>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= article.body %></td>
          <td><%= article.meta.likes %></td>
          <td><%= article.tags %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
